<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".StrukActivity">
    <TextView
        android:id="@+id/tv_toko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STRUK MACPOP"
        android:fontFamily="@font/poppins_bold"
        android:textSize="24dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/tv_struk_id_pemesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Pemesanan:" />

    <TextView
        android:id="@+id/tv_struk_tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal:" />

    <TextView
        android:id="@+id/tv_struk_total_kuantitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Kuantitas:" />

    <TextView
        android:id="@+id/tv_struk_total_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Harga:" />

    <TextView
        android:id="@+id/tv_struk_metode_pembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metode Pembayaran:" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_struk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_kembali_beranda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali ke Beranda" />
</LinearLayout>
