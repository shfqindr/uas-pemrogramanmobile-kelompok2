<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Layout untuk tulisan "MACPOP" dan logo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:outlineSpotShadowColor="@color/grey">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/macpop"
            android:textColor="@color/orange"
            android:textSize="20sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_logopng"
            />

    </LinearLayout>

    <!-- Layout untuk dua tombol -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="673dp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_menu"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_produk"
            android:fontFamily="@font/poppins_medium"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textColor="@color/white"
            android:text="@string/menu_produk"
            android:background="@drawable/button_rounded"
            android:layout_marginBottom="70dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_editmenu"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:drawableTop="@drawable/ic_report"
            android:fontFamily="@font/poppins_medium"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textColor="@color/white"
            android:background="@drawable/button_rounded"
            android:text="@string/edit_menu"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_report"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:background="@drawable/button_rounded"
            android:drawableTop="@drawable/ic_report"
            android:fontFamily="@font/poppins_medium"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="@string/laporan"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
